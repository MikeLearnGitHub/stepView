<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <com.example.setpview.StepView
        android:id="@+id/myStepView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:border_width="20dp"
        app:baseLayer_color="@color/design_default_color_primary"
        app:overlay_color="@color/design_default_color_secondary"
        app:step_text_color="@color/design_default_color_secondary"
        app:step_text_size="40sp"
        app:step_text_number="8000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.example.setpview.NotificationView
            android:id="@+id/notificationButton"
            android:layout_width="320px"
            android:layout_height="320px"
            app:notice_number_size="40sp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_height="200px"
            android:layout_width="200px"
            android:background="@drawable/button_round"
            android:layout_marginLeft="20px"
            android:text="hello"/>
        <include layout="@layout/action_notification_icon"
            android:id="@+id/btnBellIcon"/>
    </LinearLayout>


</LinearLayout>